<% @stores.each do |store| %>
  <div class="crown-store-card d-flex flex-column align-items-center justify-content-between p-4">
    <div class="img-container d-flex align-items-center justify-content-center">
      <%= image_tag(store.main_image) if store.main_image.present? %>
    </div>
    <div class="d-flex flex-column align-items-center">
      <strong class="brands mb-2 mt-3">Shop <%= store.name %></strong>
      <strong class="btc mb-3">Earn upto <%= store.reward%>% BTC</strong> 
      <%= link_to "Shop Now", store.url, class: "btn crown-btn crown-btn-lg crown-btn-dark mb-2" %>
    </div>
  </div>
<% end %>
