<%= form_for @user, url: profile_path do |f| %>
  <%= render 'errors', user: @user %>
  <div class="detail-group">
    <label for="name">Name</label>
    <%= f.text_field :name, readonly: true %>
  </div>
  <div class="detail-group">
    <label for="email">Email Address</label>
    <%= f.email_field :email, readonly: true %>
    <%= link_to edit_profile_path(section: :email) do %>
      <span class="edit-icon">
        <%= image_tag 'edit.png', alt: 'Edit' %>
      </span>
    <% end %>
  </div>
  <div class="detail-group">
    <label for="btcdress">BTC Wallet Address</label>
    <%= f.text_field :wallet_address, readonly: true %>
    <%= link_to edit_profile_path(section: :wallet_address) do %>
      <span class="edit-icon">
        <%= image_tag 'edit.png', alt: 'Edit' %>
      </span>
    <% end %>
  </div>
  <div class="detail-group">
    <label for="contactNumber">Contact Number</label>
    <%= f.phone_field :phone, readonly: true %>
    <%= link_to edit_profile_path(section: :phone) do %>
      <span class="edit-icon">
        <%= image_tag 'edit.png', alt: 'Edit' %>
      </span>
    <% end %>
  </div>
  <div class="detail-group">
    <label for="password">Password</label>
    <%= f.password_field :password, readonly: true %>

    <span class="visibility-icon" onclick="toggleVisibility()">
      <%= image_tag 'hidden-eye-icon.png', alt: 'Edit' %>
    </span>

    <%= link_to edit_profile_path(section: :password) do %>
      <span class="edit-icon">
        <%= image_tag 'edit.png', alt: 'Edit' %>
      </span>
    <% end %>
  </div>
  <div class="crypto-live-ticker-toggle">
    <label for="cryptoToggle">Show cryptocurrency live ticker at the top of my screen?</label>
    <%= f.check_box :show_live_ticker, id: 'cryptoToggle' %>
  </div>
<% end %>

<!-- CUSTOM JAVASCRIPT -->
<script>
  function toggleVisibility() {
    var x = document.getElementById("password");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>