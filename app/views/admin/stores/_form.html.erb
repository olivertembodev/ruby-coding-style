<%= render 'layouts/errors', obj: @admin_store %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
      </div>
      <div class="panel-body">
        <div class="row">
          <%= form_for [:admin, @admin_store] do |f| %>
            <div class="col-md-12">

              <div class="form-group">
                <%=f.label :name, "Name <span>*</span>".html_safe %>
                <%=f.text_field :name ,class: 'form-control', placeholder: 'Enter Name', required: 'true'%>
              </div>
              <%=f.label :cateogries, 'Departments'%>
              <div class="form-group">
                <%=f.select :category_ids , Category.all.map{|category| [category.name, category.id] }, {}, { class: 'form-control multi-select', placeholder: 'Enter Url', multiple:  true } %>
              </div>
              <div class="form-group">
                <%=f.label :reward, "Reward <span>*</span>".html_safe %>
                <%=f.number_field :reward ,class: 'form-control', placeholder: 'Enter Reward', required: 'true',  min: "1" %>
              </div>
              <div class="form-group">
                <%=f.label :url, "Url <span>*</span>".html_safe%>
                <%=f.url_field :url ,class: 'form-control', placeholder: 'Enter Url', required: 'true'%>
              </div>
              <div class="form-group ">
                <label for="affiliate_name">Which affiliate you are a part of?
                </label>
                  <%= f.text_field :affiliate_name, class: "form-control", placeholder:"Enter Affiliate" %>
              </div>
              <div class="form-group ">
                <label for="affiliate_id">What is your affiliate ID?
                </label>
                  <%= f.text_field :affiliate_id, class: "form-control", placeholder:"Enter Affiliate id" %>
              </div>
              <div class="form-group">
                <%#= f.hidden_field :image, value: f.object.main_image.signed_id if f.object.main_image.attached? %>
                <%=f.label :main_image%>
                <%=f.file_field :main_image ,class: '' %>
                <small>
                <% if @admin_store.main_image.present? %>
                  <%= image_tag(@admin_store.main_image, size: '50x50') %>
                <%end%>
                </small>
              </div>
              <%= f.submit class: "btn btn-primary" %>
              <a  href="/admin/stores" class="btn btn-secondary">Back</a>
            </div>

          <%end%>
        </div>
      </div>        
    </div>
  </div>    
</div>