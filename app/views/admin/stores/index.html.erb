<div class="container-fluid">
    <!-- DataTales Example -->
     <%= link_to "Add New Store", new_admin_store_path, class: "btn btn-lg btn-primary pull-right margin-tp" %>
  <div class="card shadow mb-4">

    <div class="card-body">
      <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                  <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Reward</th>
                    <th>Logo</th>
                    <th>Link</th>
                    <th class="text-center">Actions</th>
                  </tr>
              </thead>
              <tbody>
                <% @admin_stores.each_with_index do |store, index| %>
                  <tr>
                    <td><%= index+1 %></td>
                    <td><%= store.name %></td>
                    <td><%= store.reward %></td>
                    <td><%= image_tag(store.main_image, style: "max-width:100px;") if store.main_image.present? %></td>
                    <td><%= link_to store.url, store.url, target: '_blank' %></td>
                    <td class="text-center">
                      <span>
                      <%= link_to '<i class="fa fa-edit icon_link with-tip no-text"></i>'.html_safe, edit_admin_store_path(store), class: "edit ", title: "edit"%>&nbsp; &nbsp;
                      </span>
                      <span>
                     
                      <%= link_to '<i class="fa fa-trash icon_link with-tip no-text"></i>'.html_safe,  admin_store_path(store), method: :delete, data: { confirm: 'Are you sure?' } ,class: "delete " , title: "delete" %>
                          
                      </span>
                  </td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>

</div>