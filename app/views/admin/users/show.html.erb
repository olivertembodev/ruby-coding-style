<%= link_to "Back", admin_users_path, class: "btn btn-lg btn-primary" %>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>id</th>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Wallet Address</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <tr>
                <td><%= @user.id %></td>
                <td><%= @user.name %></td>
                <td><%= @user.email %></td>
                <td><%= @user.phone %></td>
                <td><%= @user.wallet_address %></td>
                <td><%= link_to "Edit", edit_admin_user_path(@user.id) %></td>
                <td><%= link_to "Delete", admin_user_path(@user.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sml btn-danger" %></td>
              </tr>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>
