<div class="container-fluid">
  <%= link_to "Add New User", new_admin_user_path, class: "btn btn-lg btn-primary pull-right margin-tp" %>
    <div class="mb-1"></div>
    <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
           <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                  <tr>
                    <th>No.</th>
                    <th>Roles</th>
                    <th>Name</th>
                    <th>wallet</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Action</th>
                  </tr>
              </thead>
              <tbody>
                <% @users.each_with_index do |user,index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.roles.collect(&:name).join(',') %></td>
                    <td><%= user.name %></td>
                    <td><%= user.wallet_address %></td>
                     <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <td class="text-center">
                      <span>
                      <%= link_to '<i class="fa fa-edit icon_link with-tip no-text"></i>'.html_safe, edit_admin_user_path(user), class: "edit ", title: "edit"%>&nbsp; &nbsp;
                      </span>
                      <span>
                     
                      <%= link_to '<i class="fa fa-trash icon_link with-tip no-text"></i>'.html_safe,  admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } ,class: "delete " , title: "delete" %>
                          
                      </span>
                  </td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>

</div>