

<div class="container-fluid">
  <%= link_to "Add New Department", new_admin_category_path, class: "btn btn-lg btn-primary pull-right margin-tp" %>
  <div class="mb-1"></div>
    <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                   <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th class="text-center">Actions</th>
                    
                </tr>
              </thead>
              <tbody>

              <% @admin_categories.each_with_index do |admin_category,index| %>

                <tr class="odd gradeX">
                  <td><%= index+1 %></td>
                  <td><%= admin_category.name %></td>
                  <td class="text-center">
                      <span>
                      <%= link_to '<i class="fa fa-edit icon_link with-tip no-text"></i>'.html_safe, edit_admin_category_path(admin_category), class: "edit ", title: "edit"%>&nbsp; &nbsp;
                      </span>
                      <span>
                     
                      <%= link_to '<i class="fa fa-trash icon_link with-tip no-text"></i>'.html_safe,  admin_category_path(admin_category), method: :delete, data: { confirm: 'Are you sure?' } ,class: "delete " , title: "delete" %>
                          
                      </span>
                  </td>
                </tr>
              <%end%>                                                                             
            </tbody>
          </table>
      </div>
    </div>
  </div>

</div>